[{
	"verse": "十年生死两茫茫，不思量，自难忘。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_461.aspx",
	"poetry": "苏轼《江城子·乙卯正月二十日夜记梦》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_567fcf6ffefb.aspx"
}, {
	"verse": "曾经沧海难为水，除却巫山不是云。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_155.aspx",
	"poetry": "元稹《离思五首·其四》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_bd4224133394.aspx"
}, {
	"verse": "玲珑骰子安红豆，入骨相思知不知。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_476.aspx",
	"poetry": "温庭筠《南歌子词二首 / 新添声杨柳枝词》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_a2b349dd32e8.aspx"
}, {
	"verse": "只愿君心似我心，定不负相思意。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_345.aspx",
	"poetry": "李之仪《卜算子·我住长江头》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_d096804a25ff.aspx"
}, {
	"verse": "平生不会相思，才会相思，便害相思。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_459.aspx",
	"poetry": "徐再思《折桂令·春情》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_c439b578d976.aspx"
}, {
	"verse": "愿得一心人，白头不相离。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_342.aspx",
	"poetry": "卓文君《白头吟》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_a416ac373919.aspx"
}, {
	"verse": "山无陵，江水为竭。冬雷震震，夏雨雪。天地合，乃敢与君绝。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_169.aspx",
	"poetry": "佚名《上邪》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_4ef2774ed20a.aspx"
}, {
	"verse": "入我相思门，知我相思苦。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_444.aspx",
	"poetry": "李白《三五七言 / 秋风词》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_169ff9fbafcb.aspx"
}, {
	"verse": "两情若是久长时，又岂在朝朝暮暮。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_436.aspx",
	"poetry": "秦观《鹊桥仙·纤云弄巧》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_e83cadaaf394.aspx"
}, {
	"verse": "问世间，情为何物，直教生死相许？",
	"verseLink": "http://so.gushiwen.org/mingju/ju_455.aspx",
	"poetry": "元好问《摸鱼儿·雁丘词 / 迈陂塘》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_8a860f142c0a.aspx"
}, {
	"verse": "一日不见兮，思之如狂。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_443.aspx",
	"poetry": "司马相如《凤求凰 / 琴歌》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_13f153478a2a.aspx"
}, {
	"verse": "执子之手，与子偕老。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_357.aspx",
	"poetry": "佚名《击鼓》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_73b3c6badf1b.aspx"
}, {
	"verse": "身无彩凤双飞翼，心有灵犀一点通。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_456.aspx",
	"poetry": "李商隐《无题·昨夜星辰昨夜风》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_05c6c4ccf634.aspx"
}, {
	"verse": "若是前生未有缘，待重结、来生愿。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_367.aspx",
	"poetry": "乐婉《卜算子·答施》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_80847c0addf5.aspx"
}, {
	"verse": "怕相思，已相思，轮到相思没处辞，眉间露一丝。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_416.aspx",
	"poetry": "俞彦《长相思·折花枝》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_71a85f935e90.aspx"
}, {
	"verse": "取次花丛懒回顾，半缘修道半缘君。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_344.aspx",
	"poetry": "元稹《离思五首·其四》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_bd4224133394.aspx"
}, {
	"verse": "还君明珠双泪垂，恨不相逢未嫁时。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_446.aspx",
	"poetry": "张籍《节妇吟·寄东平李司空师道》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_7bfee4dfbfe0.aspx"
}, {
	"verse": "似此星辰非昨夜，为谁风露立中宵。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_450.aspx",
	"poetry": "黄景仁《绮怀》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_3b1108c2df7b.aspx"
}, {
	"verse": "天涯地角有穷时，只有相思无尽处。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_477.aspx",
	"poetry": "晏殊《玉楼春·春恨》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_2a96e54dae55.aspx"
}, {
	"verse": "夜月一帘幽梦，春风十里柔情。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_483.aspx",
	"poetry": "秦观《八六子·倚危亭》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_225cb1230cb7.aspx"
}, {
	"verse": "落花人独立，微雨燕双飞。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_466.aspx",
	"poetry": "晏几道《临江仙·梦后楼台高锁》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_47c89d71e6be.aspx"
}, {
	"verse": "直道相思了无益，未妨惆怅是清狂。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_451.aspx",
	"poetry": "李商隐《无题·重帏深下莫愁堂》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_cad3c6bebe91.aspx"
}, {
	"verse": "换我心，为你心，始知相忆深。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_473.aspx",
	"poetry": "顾夐《诉衷情·永夜抛人何处去》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_cda0e25b4442.aspx"
}, {
	"verse": "多情自古伤离别，更那堪冷落清秋节！",
	"verseLink": "http://so.gushiwen.org/mingju/ju_484.aspx",
	"poetry": "柳永《雨霖铃·寒蝉凄切》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_4d795944b856.aspx"
}, {
	"verse": "闻君有两意，故来相决绝。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_349.aspx",
	"poetry": "卓文君《白头吟》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_a416ac373919.aspx"
}, {
	"verse": "生当复来归，死当长相思。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_482.aspx",
	"poetry": "佚名《留别妻》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_2dd3daf34fd9.aspx"
}, {
	"verse": "人到情多情转薄，而今真个悔多情。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_452.aspx",
	"poetry": "纳兰性德《山花子·风絮飘残已化萍》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_689770b9b1ee.aspx"
}, {
	"verse": "心似双丝网，中有千千结。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_449.aspx",
	"poetry": "张先《千秋岁·数声鶗鴂》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_7a26145edb34.aspx"
}, {
	"verse": "日日思君不见君，共饮长江水。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_44.aspx",
	"poetry": "李之仪《卜算子·我住长江头》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_d096804a25ff.aspx"
}, {
	"verse": "海水梦悠悠，君愁我亦愁。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_224.aspx",
	"poetry": "佚名《西洲曲》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_32d2e7ebc423.aspx"
}, {
	"verse": "美人卷珠帘，深坐颦蛾眉。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_353.aspx",
	"poetry": "李白《怨情》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_68fe1f940020.aspx"
}, {
	"verse": "泪眼问花花不语，乱红飞过秋千去。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_478.aspx",
	"poetry": "欧阳修《蝶恋花·庭院深深深几许》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_b827b3f18b38.aspx"
}, {
	"verse": "相思相见知何日？此时此夜难为情！",
	"verseLink": "http://so.gushiwen.org/mingju/ju_437.aspx",
	"poetry": "李白《三五七言 / 秋风词》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_169ff9fbafcb.aspx"
}, {
	"verse": "盈盈一水间，脉脉不得语。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_118.aspx",
	"poetry": "佚名《迢迢牵牛星》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_7f09a756c9c0.aspx"
}, {
	"verse": "欲把相思说似谁，浅情人不知。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_343.aspx",
	"poetry": "晏几道《长相思·长相思》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_82efd742cede.aspx"
}, {
	"verse": "天长地久有时尽，此恨绵绵无绝期。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_462.aspx",
	"poetry": "白居易《长恨歌》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_09d31b73b44d.aspx"
}, {
	"verse": "酒入愁肠，化作相思泪。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_481.aspx",
	"poetry": "范仲淹《苏幕遮·怀旧》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_0bfac067dd8e.aspx"
}, {
	"verse": "曾与美人桥上别，恨无消息到今朝。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_396.aspx",
	"poetry": "刘禹锡《杨柳枝 / 柳枝词》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_25018504451e.aspx"
}, {
	"verse": "相思了无益，悔当初相见。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_430.aspx",
	"poetry": "朱彝尊《忆少年·飞花时节》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_ca24efbd41b8.aspx"
}, {
	"verse": "窈窕淑女，君子好逑。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_464.aspx",
	"poetry": "佚名《关雎》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_4c5705b99143.aspx"
}, {
	"verse": "相思只在：丁香枝上，豆蔻梢头。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_375.aspx",
	"poetry": "王雱《眼儿媚·杨柳丝丝弄轻柔》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_a5d0d1487395.aspx"
}, {
	"verse": "肠已断，泪难收。相思重上小红楼。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_402.aspx",
	"poetry": "辛弃疾《鹧鸪天·晚日寒鸦一片愁》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_1da16040c5e0.aspx"
}, {
	"verse": "无情不似多情苦。一寸还成千万缕。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_485.aspx",
	"poetry": "晏殊《玉楼春·春恨》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_2a96e54dae55.aspx"
}, {
	"verse": "结发为夫妻，恩爱两不疑。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_469.aspx",
	"poetry": "佚名《留别妻》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_2dd3daf34fd9.aspx"
}, {
	"verse": "多情只有春庭月，犹为离人照落花。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_479.aspx",
	"poetry": "张泌《寄人》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_eb3a53d949c4.aspx"
}, {
	"verse": "借问江潮与海水，何似君情与妾心？",
	"verseLink": "http://so.gushiwen.org/mingju/ju_259.aspx",
	"poetry": "白居易《浪淘沙·借问江潮与海水》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_139c20ac3fb8.aspx"
}, {
	"verse": "莫唱当年长恨歌，人间亦自有银河。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_4732.aspx",
	"poetry": "袁枚《马嵬》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_bc1e52481a58.aspx"
}, {
	"verse": "愿为西南风，长逝入君怀。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_412.aspx",
	"poetry": "曹植《明月上高楼》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_5ea23fc91c66.aspx"
}, {
	"verse": "君知妾有夫，赠妾双明珠。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_413.aspx",
	"poetry": "张籍《节妇吟·寄东平李司空师道》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_7bfee4dfbfe0.aspx"
}, {
	"verse": "君问归期未有期，巴山夜雨涨秋池。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_32.aspx",
	"poetry": "李商隐《夜雨寄北》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_e46c43d13b97.aspx"
}, {
	"verse": "相恨不如潮有信，相思始觉海非深。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_475.aspx",
	"poetry": "白居易《浪淘沙·借问江潮与海水》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_139c20ac3fb8.aspx"
}, {
	"verse": "忽见陌头杨柳色，悔教夫婿觅封侯。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_350.aspx",
	"poetry": "王昌龄《闺怨》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_bea0a298570b.aspx"
}, {
	"verse": "山远天高烟水寒，相思枫叶丹。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_425.aspx",
	"poetry": "李煜《长相思·一重山》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_2693da9ced02.aspx"
}, {
	"verse": "情人怨遥夜，竟夕起相思。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_351.aspx",
	"poetry": "张九龄《望月怀远》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_7cc200edc65e.aspx"
}, {
	"verse": "孤灯不明思欲绝，卷帷望月空长叹。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_347.aspx",
	"poetry": "李白《长相思·其一》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_8f424591685d.aspx"
}, {
	"verse": "不茶不饭，不言不语，一味供他憔悴。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_5710.aspx",
	"poetry": "蜀妓《鹊桥仙·说盟说誓》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_46ecad57c074.aspx"
}, {
	"verse": "花落花开自有时，总赖东君主。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_411.aspx",
	"poetry": "严蕊《卜算子·不是爱风尘》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_b568dc26cdc9.aspx"
}, {
	"verse": "当君怀归日，是妾断肠时。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_426.aspx",
	"poetry": "李白《春思》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_727c47ecf120.aspx"
}, {
	"verse": "思君如流水，何有穷已时。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_447.aspx",
	"poetry": "徐干《室思》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_88ccf5cf1d59.aspx"
}, {
	"verse": "千金纵买相如赋，脉脉此情谁诉。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_468.aspx",
	"poetry": "辛弃疾《摸鱼儿·更能消几番风雨》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_1443f4f57a9d.aspx"
}, {
	"verse": "一寸相思千万绪。人间没个安排处。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_460.aspx",
	"poetry": "李冠《蝶恋花·春暮》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_1d9a6258d613.aspx"
}, {
	"verse": "相思相望不相亲，天为谁春。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_354.aspx",
	"poetry": "纳兰性德《画堂春·一生一代一双人》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_22706e96d291.aspx"
}, {
	"verse": "君为女萝草，妾作菟丝花。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_4393.aspx",
	"poetry": "李白《古意》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_11feb1c79725.aspx"
}, {
	"verse": "谁料同心结不成，翻就相思结。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_391.aspx",
	"poetry": "夏完淳《卜算子·秋色到空闺》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_fd6e0c517821.aspx"
}, {
	"verse": "欲寄彩笺兼尺素。山长水阔知何处。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_153.aspx",
	"poetry": "晏殊《蝶恋花·槛菊愁烟兰泣露》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_902b7c60788a.aspx"
}, {
	"verse": "感君缠绵意，系在红罗襦。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_373.aspx",
	"poetry": "张籍《节妇吟·寄东平李司空师道》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_7bfee4dfbfe0.aspx"
}, {
	"verse": "殷勤花下同携手。更尽杯中酒。美人不用敛蛾眉。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_383.aspx",
	"poetry": "叶梦得《虞美人·雨后同干誉才卿置酒来禽花下作》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_2c6bcc883181.aspx"
}, {
	"verse": "妆罢低声问夫婿，画眉深浅入时无。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_348.aspx",
	"poetry": "朱庆馀《近试上张籍水部 / 近试上张水部 / 闺意献张水部》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_b8d00bf5329b.aspx"
}, {
	"verse": "看朱成碧思纷纷，憔悴支离为忆君。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_442.aspx",
	"poetry": "武则天《如意娘》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_7542247e8a88.aspx"
}, {
	"verse": "若似月轮终皎洁，不辞冰雪为卿热。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_3047.aspx",
	"poetry": "纳兰性德《蝶恋花·辛苦最怜天上月》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_26b87875bd77.aspx"
}, {
	"verse": "梅花雪，梨花月，总相思。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_575.aspx",
	"poetry": "张惠言《相见欢·年年负却花期》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_4ff44a36f545.aspx"
}, {
	"verse": "恨君不似江楼月，南北东西，南北东西，只有相随无别离。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_346.aspx",
	"poetry": "吕本中《采桑子·恨君不似江楼月》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_97cbaf7a1964.aspx"
}, {
	"verse": "皑如山上雪，皎若云间月。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_3050.aspx",
	"poetry": "卓文君《白头吟》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_a416ac373919.aspx"
}, {
	"verse": "君若清路尘，妾若浊水泥；",
	"verseLink": "http://so.gushiwen.org/mingju/ju_306.aspx",
	"poetry": "曹植《明月上高楼》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_5ea23fc91c66.aspx"
}, {
	"verse": "若有知音见采，不辞遍唱阳春。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_480.aspx",
	"poetry": "晏殊《山亭柳·赠歌者》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_df09c8f1d7b9.aspx"
}, {
	"verse": "诚知此恨人人有，贫贱夫妻百事哀。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_472.aspx",
	"poetry": "元稹《遣悲怀三首·其二》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_8d7eab9265d3.aspx"
}, {
	"verse": "凄凉别后两应同，最是不胜清怨月明中。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_445.aspx",
	"poetry": "纳兰性德《虞美人·曲阑深处重相见》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_f27a0db2985b.aspx"
}, {
	"verse": "两鬓可怜青，只为相思老。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_441.aspx",
	"poetry": "晏几道《生查子·关山魂梦长》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_e6d516f9745f.aspx"
}, {
	"verse": "知君用心如日月，事夫誓拟同生死。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_427.aspx",
	"poetry": "张籍《节妇吟·寄东平李司空师道》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_7bfee4dfbfe0.aspx"
}, {
	"verse": "相思本是无凭语，莫向花笺费泪行。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_414.aspx",
	"poetry": "晏几道《鹧鸪天·醉拍春衫惜旧香》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_a657b616ce0a.aspx"
}, {
	"verse": "相思似海深，旧事如天远。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_419.aspx",
	"poetry": "乐婉《卜算子·答施》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_80847c0addf5.aspx"
}, {
	"verse": "琵琶弦上说相思。当时明月在，曾照彩云归。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_435.aspx",
	"poetry": "晏几道《临江仙·梦后楼台高锁》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_47c89d71e6be.aspx"
}, {
	"verse": "相思一夜情多少，地角天涯未是长。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_454.aspx",
	"poetry": "张仲素《燕子楼诗三首》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_81eabf200195.aspx"
}, {
	"verse": "相寻梦里路，飞雨落花中。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_3597.aspx",
	"poetry": "晏几道《临江仙·斗草阶前初见》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_8fdc5aa07e44.aspx"
}, {
	"verse": "春宵苦短日高起，从此君王不早朝。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_3718.aspx",
	"poetry": "白居易《长恨歌》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_09d31b73b44d.aspx"
}, {
	"verse": "天与短因缘，聚散常容易。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_544.aspx",
	"poetry": "晏几道《生查子·狂花顷刻香》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_91343f1f537d.aspx"
}, {
	"verse": "待浮花、浪蕊都尽，伴君幽独。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_581.aspx",
	"poetry": "苏轼《贺新郎·夏景》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_30ee75b124cc.aspx"
}, {
	"verse": "一种相思，两处闲愁。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_598.aspx",
	"poetry": "李清照《一剪梅·红藕香残玉簟秋》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_b7f6fef5bb0b.aspx"
}, {
	"verse": "别来半岁音书绝，一寸离肠千万结。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_487.aspx",
	"poetry": "韦庄《应天长·别来半岁音书绝》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_866f6461b0ac.aspx"
}, {
	"verse": "夜夜相思更漏残，伤心明月凭阑干，想君思我锦衾寒。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_370.aspx",
	"poetry": "韦庄《浣溪沙·夜夜相思更漏残》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_44242e32fd9f.aspx"
}, {
	"verse": "斑竹枝，斑竹枝，泪痕点点寄相思。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_393.aspx",
	"poetry": "刘禹锡《潇湘神·斑竹枝》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_58ee8c3b8b29.aspx"
}, {
	"verse": "四月十七，正是去年今日，别君时。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_364.aspx",
	"poetry": "韦庄《女冠子·四月十七》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_c5239fb584d8.aspx"
}, {
	"verse": "深知身在情长在，怅望江头江水声。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_266.aspx",
	"poetry": "李商隐《暮秋独游曲江》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_6603bbfbce60.aspx"
}, {
	"verse": "春来秋去相思在，秋去春来信息稀。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_504.aspx",
	"poetry": "鱼玄机《闺怨》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_765270f66a61.aspx"
}, {
	"verse": "怅恨不逢如意酒。寻思难值有情人。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_542.aspx",
	"poetry": "晏几道《浣溪沙·闲弄筝弦懒系裙》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_0ad241b9b907.aspx"
}, {
	"verse": "车遥遥兮马洋洋，追思君兮不可忘。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_500.aspx",
	"poetry": "傅玄《车遥遥篇》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_47e0726667ee.aspx"
}, {
	"verse": "忆昔花间相见后，只凭纤手，暗抛红豆。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_405.aspx",
	"poetry": "欧阳炯《贺明朝·忆昔花间相见后》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_72fbc8b85928.aspx"
}, {
	"verse": "离愁渐远渐无穷，迢迢不断如春水。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_488.aspx",
	"poetry": "欧阳修《踏莎行·候馆梅残》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_a6ac390bd248.aspx"
}, {
	"verse": "流水便随春远，行云终与谁同。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_3509.aspx",
	"poetry": "晏几道《临江仙·斗草阶前初见》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_8fdc5aa07e44.aspx"
}, {
	"verse": "春思乱，芳心碎。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_556.aspx",
	"poetry": "惠洪《千秋岁·半身屏外》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_002f2549aced.aspx"
}, {
	"verse": "君安游兮西入秦，愿为影兮随君身。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_498.aspx",
	"poetry": "傅玄《车遥遥篇》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_47e0726667ee.aspx"
}, {
	"verse": "红豆不堪看，满眼相思泪。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_384.aspx",
	"poetry": "牛希济《生查子·新月曲如眉》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_a382ca3b15bc.aspx"
}, {
	"verse": "一语不入意，从君万曲梁尘飞。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_399.aspx",
	"poetry": "李白《夜坐吟》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_32fef60988e8.aspx"
}, {
	"verse": "别后不知君远近。触目凄凉多少闷。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_415.aspx",
	"poetry": "欧阳修《玉楼春·别后不知君远近》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_fe34d4125f89.aspx"
}, {
	"verse": "逢郎欲语低头笑，碧玉搔头落水中。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_215.aspx",
	"poetry": "白居易《采莲曲》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_2ab86e4f3301.aspx"
}, {
	"verse": "同穴窅冥何所望，他生缘会更难期。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_369.aspx",
	"poetry": "元稹《遣悲怀三首·其三》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_fe89b7670e0a.aspx"
}, {
	"verse": "妇人依倚子与夫，同居贫贱心亦舒。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_546.aspx",
	"poetry": "张籍《征妇怨》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_0fa9479685e1.aspx"
}, {
	"verse": "雁字无多，写得相思几许。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_587.aspx",
	"poetry": "周密《扫花游·九日怀归》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_517416c8718a.aspx"
}, {
	"verse": "寄相思，寒雨灯窗，芙蓉旧院。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_592.aspx",
	"poetry": "吴文英《宴清都·秋感》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_056841fe7e24.aspx"
}, {
	"verse": "残月出门时，美人和泪辞。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_401.aspx",
	"poetry": "韦庄《菩萨蛮·红楼别夜堪惆怅》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_bfdc62faea89.aspx"
}, {
	"verse": "夜长争得薄情知，春初早被相思染。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_376.aspx",
	"poetry": "姜夔《踏莎行·自沔东来》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_8608930dd293.aspx"
}, {
	"verse": "天长路远魂飞苦，梦魂不到关山难。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_471.aspx",
	"poetry": "李白《长相思·其一》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_8f424591685d.aspx"
}, {
	"verse": "一夜相思，水边清浅横枝瘦。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_397.aspx",
	"poetry": "陈亮《点绛唇·咏梅月》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_d82805d3e870.aspx"
}, {
	"verse": "凝恨对残晖，忆君君不知。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_362.aspx",
	"poetry": "韦庄《菩萨蛮》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_0a6be1a23404.aspx"
}, {
	"verse": "思君如陇水，长闻呜咽声。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_352.aspx",
	"poetry": "雍裕之《自君之出矣》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_4ce5a0b9ffd8.aspx"
}, {
	"verse": "掩妾泪，听君歌。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_584.aspx",
	"poetry": "李白《夜坐吟》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_32fef60988e8.aspx"
}, {
	"verse": "浅情终似，行云无定，犹到梦魂中。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_3455.aspx",
	"poetry": "晏几道《少年游·离多最是》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_1b503feef62b.aspx"
}, {
	"verse": "春已归来，看美人头上，袅袅春幡。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_365.aspx",
	"poetry": "辛弃疾《汉宫春·立春日》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_764f7a57e39d.aspx"
}, {
	"verse": "无那尘缘容易绝，燕子依然，软踏帘钩说。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_359.aspx",
	"poetry": "纳兰性德《蝶恋花·辛苦最怜天上月》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_26b87875bd77.aspx"
}, {
	"verse": "相思难表，梦魂无据，惟有归来是。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_390.aspx",
	"poetry": "欧阳修《青玉案·一年春事都来几》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_73885949171b.aspx"
}, {
	"verse": "奴为出来难，教君恣意怜。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_421.aspx",
	"poetry": "李煜《菩萨蛮·花明月暗笼轻雾》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_9c39612f2c5b.aspx"
}, {
	"verse": "若待得君来向此，花前对酒不忍触。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_381.aspx",
	"poetry": "苏轼《贺新郎·夏景》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_30ee75b124cc.aspx"
}, {
	"verse": "妾身悔作商人妇，妾命当逢薄幸夫。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_394.aspx",
	"poetry": "徐再思《阳春曲·闺怨》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_8ac496690372.aspx"
}, {
	"verse": "相思无因见，怅望凉风前。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_398.aspx",
	"poetry": "李白《折荷有赠》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_efee623c144c.aspx"
}, {
	"verse": "乌啼隐杨花，君醉留妾家。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_361.aspx",
	"poetry": "李白《杨叛儿》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_f314a144aa39.aspx"
}, {
	"verse": "碧云无渡碧天沉，是湖心，是侬心。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_3506.aspx",
	"poetry": "张惠言《江城子·填张春溪西湖竹枝词》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_eea8ea8859c0.aspx"
}, {
	"verse": "人去秋千闲挂月，马停杨柳倦嘶风。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_5474.aspx",
	"poetry": "吴文英《望江南·三月暮》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_07a33d9e32c6.aspx"
}, {
	"verse": "屏山遮断相思路，子规啼到无声处。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_553.aspx",
	"poetry": "高鹗《青玉案·丝丝香篆浓于雾》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_c8e95ef9376e.aspx"
}, {
	"verse": "相思处、青年如梦，乘鸾仙阙。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_562.aspx",
	"poetry": "文天祥《满江红·和王夫人满江红韵以庶几後山妾薄命之意》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_86527d53c14b.aspx"
}, {
	"verse": "劝君频入醉乡来，此是无愁无恨处。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_512.aspx",
	"poetry": "晏几道《玉楼春·雕鞍好为莺花住》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_b4410a143929.aspx"
}, {
	"verse": "君在天一涯，妾身长别离。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_532.aspx",
	"poetry": "江淹《古离别》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_e3e85290b9b6.aspx"
}, {
	"verse": "佳人独立相思苦。薄袖欺寒脩竹暮。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_588.aspx",
	"poetry": "刘镇《玉楼春·东山探梅》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_1c7ddb9cc90b.aspx"
}, {
	"verse": "惜分长怕君先去，直待醉时休。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_386.aspx",
	"poetry": "贺铸《眼儿媚·萧萧江上荻花秋》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_935538a56e4b.aspx"
}, {
	"verse": "柳色披衫金缕凤，纤手轻拈红豆弄，翠蛾双敛正含情。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_382.aspx",
	"poetry": "和凝《天仙子·柳色披衫金缕凤》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_228864c50cb0.aspx"
}, {
	"verse": "西园何限相思树，辛苦梅花候海棠。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_510.aspx",
	"poetry": "元好问《鹧鸪天·候馆灯昏雨送凉》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_9fcf27cd99a3.aspx"
}, {
	"verse": "月色入高楼，相思两处愁。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_424.aspx",
	"poetry": "秋瑾《菩萨蛮·寄女伴》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_d97b2857e169.aspx"
}, {
	"verse": "问君何事轻离别，一年能几团圞月。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_432.aspx",
	"poetry": "纳兰性德《菩萨蛮·问君何事轻离别》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_f90de7d4a9b9.aspx"
}, {
	"verse": "兽炉沉水烟，翠沼残花片。一行写入相思传。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_457.aspx",
	"poetry": "张可久《塞鸿秋·春情》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_e44c347eeea5.aspx"
}, {
	"verse": "枕前泪共阶前雨，隔个窗儿滴到明。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_470.aspx",
	"poetry": "聂胜琼《鹧鸪天·别情》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_0f05a8e99695.aspx"
}, {
	"verse": "远与君别者，乃至雁门关。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_499.aspx",
	"poetry": "江淹《古离别》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_e3e85290b9b6.aspx"
}, {
	"verse": "出入君怀袖，动摇微风发。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_379.aspx",
	"poetry": "班婕妤《怨歌行》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_31c5fb3823cc.aspx"
}, {
	"verse": "石壕村里夫妻别，泪比长生殿上多。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_360.aspx",
	"poetry": "袁枚《马嵬》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_bc1e52481a58.aspx"
}, {
	"verse": "碧水浩浩云茫茫，美人不来空断肠。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_358.aspx",
	"poetry": "李白《早春寄王汉阳》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_1573183c5ac2.aspx"
}, {
	"verse": "还作一段相思，冷波叶舞愁红，送人双桨。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_590.aspx",
	"poetry": "吴文英《解蹀躞·醉云又兼醒雨》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_1028b142b43f.aspx"
}, {
	"verse": "合欢桃核终堪恨，里许元来别有人。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_798.aspx",
	"poetry": "温庭筠《南歌子词二首 / 新添声杨柳枝词》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_a2b349dd32e8.aspx"
}, {
	"verse": "昔看黄菊与君别，今听玄蝉我却回。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_2900.aspx",
	"poetry": "刘禹锡《始闻秋风》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_ba7ed45ed4fb.aspx"
}, {
	"verse": "梨花院落溶溶月，柳絮池塘淡淡风。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_5945.aspx",
	"poetry": "晏殊《无题·油壁香车不再逢》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_5f9038905eb7.aspx"
}, {
	"verse": "两情缠绵忽如故。复畏秋风生晓路。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_5266.aspx",
	"poetry": "王建《七夕曲》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_34e78c7d03a5.aspx"
}, {
	"verse": "所谓伊人，在水一方。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_5872.aspx",
	"poetry": "佚名《蒹葭》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_15cd220102d6.aspx"
}, {
	"verse": "乌丝阑纸娇红篆，历历春星。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_5634.aspx",
	"poetry": "纳兰性德《红窗月·燕归花谢》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_52eb47de2fc9.aspx"
}, {
	"verse": "荆州麦熟茧成蛾，缲丝忆君头绪多。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_540.aspx",
	"poetry": "李白《荆州歌》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_fbea759caff6.aspx"
}, {
	"verse": "最关情，折尽梅花，难寄相思。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_563.aspx",
	"poetry": "周密《高阳台·送陈君衡被召》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_5058d359096f.aspx"
}, {
	"verse": "清风明月苦相思，荡子从戎十载馀。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_363.aspx",
	"poetry": "王维《伊州歌》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_82c6ec8e5c49.aspx"
}, {
	"verse": "君宠益娇态，君怜无是非。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_380.aspx",
	"poetry": "王维《西施咏》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_f73dd1f66af4.aspx"
}, {
	"verse": "鸳鸯俱是白头时，江南渭北三千里。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_385.aspx",
	"poetry": "贺铸《惜余春·急雨收春》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_3011e91fb5f4.aspx"
}, {
	"verse": "还怕两人俱薄命，再缘悭、剩月零风里。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_403.aspx",
	"poetry": "纳兰性德《金缕曲·亡妇忌日有感》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_459a494177cb.aspx"
}, {
	"verse": "相思已是不曾闲，又那得、工夫咒你。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_422.aspx",
	"poetry": "蜀妓《鹊桥仙·说盟说誓》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_46ecad57c074.aspx"
}, {
	"verse": "薄幸郎君何日到，想自当初，莫要相逢好。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_515.aspx",
	"poetry": "施耐庵《蝶恋花·一别家山音信杳》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_477e411fea0e.aspx"
}, {
	"verse": "为君憔悴尽，百花时。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_434.aspx",
	"poetry": "温庭筠《南歌子·倭堕低梳髻》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_78d7c09f679a.aspx"
}, {
	"verse": "绣袂捧琴兮，登君子堂。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_520.aspx",
	"poetry": "贯休《善哉行·伤古曲无知音》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_66460ea13d75.aspx"
}, {
	"verse": "暗相思，无处说，惆怅夜来烟月。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_511.aspx",
	"poetry": "韦庄《应天长·别来半岁音书绝》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_866f6461b0ac.aspx"
}, {
	"verse": "春闺月，红袖不须啼。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_507.aspx",
	"poetry": "元好问《江月晃重山·初到嵩山时作》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_c2d38d17f546.aspx"
}, {
	"verse": "宝奁明月不欺人，明日归来君试看。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_493.aspx",
	"poetry": "严仁《玉楼春·春思》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_3543a034333b.aspx"
}, {
	"verse": "漫向寒炉醉玉瓶，唤君同赏小窗明。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_495.aspx",
	"poetry": "陆游《浣溪沙·和无咎韵》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_fdd2df658d25.aspx"
}, {
	"verse": "君在阴兮影不见，君依光兮妾所愿。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_491.aspx",
	"poetry": "傅玄《车遥遥篇》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_47e0726667ee.aspx"
}, {
	"verse": "花满河阳，为君羞褪晨妆茜。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_569.aspx",
	"poetry": "吴文英《烛影摇红·赋德清县圃古红梅》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_1639339ebaff.aspx"
}, {
	"verse": "问相思、他日镜中看，萧萧发。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_554.aspx",
	"poetry": "严羽《满江红·送廖叔仁赴阙》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_0486b8931751.aspx"
}, {
	"verse": "明月照相思，也得姮娥念我痴。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_509.aspx",
	"poetry": "高鹗《南乡子·戊申秋隽喜晤故人》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_b6e38627876d.aspx"
}, {
	"verse": "君行逾十年，孤妾常独栖。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_539.aspx",
	"poetry": "曹植《明月上高楼》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_5ea23fc91c66.aspx"
}, {
	"verse": "意长翻恨游丝短。尽日相思罗带缓。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_529.aspx",
	"poetry": "严仁《玉楼春·春思》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_3543a034333b.aspx"
}, {
	"verse": "待约个梅魂，黄昏月淡，与伊深怜低语。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_1652.aspx",
	"poetry": "柳如是《金明池·咏寒柳》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_40927edc1744.aspx"
}, {
	"verse": "教人无处寄相思，落花芳草过前期，没人知。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_582.aspx",
	"poetry": "孙光宪《虞美人·好风微揭帘旌起》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_f24d3bc465e2.aspx"
}, {
	"verse": "我歌君起舞，潦倒略相同。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_576.aspx",
	"poetry": "陈师道《除夜对酒赠少章》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_f083d4aaae52.aspx"
}, {
	"verse": "青青子衿，悠悠我心。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_5871.aspx",
	"poetry": "佚名《子衿》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_cfe0289eb931.aspx"
}, {
	"verse": "旧相思、偏供闲昼。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_583.aspx",
	"poetry": "吴文英《夜游宫·春语莺迷翠柳》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_5955153ff1a7.aspx"
}, {
	"verse": "尘缘一点，回首西风又陈迹。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_585.aspx",
	"poetry": "吴文英《六么令·夷则宫七夕》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_2fc22106f94d.aspx"
}, {
	"verse": "春朝秋夜思君甚，愁见绣屏孤枕。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_591.aspx",
	"poetry": "魏承班《满宫花·雪霏霏》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_950e4be41453.aspx"
}, {
	"verse": "算遗踪、犹有枕囊留，相思物。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_580.aspx",
	"poetry": "吴文英《满江红·刘朔斋赋菊和韵》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_8ccc7ee89ab8.aspx"
}, {
	"verse": "自与东君作别，刬地无聊。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_534.aspx",
	"poetry": "纳兰性德《风流子·秋郊即事》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_2278e6f8a29f.aspx"
}, {
	"verse": "写不了相思，又蘸凉波飞去。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_545.aspx",
	"poetry": "朱彝尊《长亭怨慢·雁》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_09802fe7e266.aspx"
}, {
	"verse": "辜负我，悔怜君，告天天不闻。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_557.aspx",
	"poetry": "牛峤《更漏子·春夜阑》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_e8754c5dba46.aspx"
}, {
	"verse": "问别来、解相思否。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_559.aspx",
	"poetry": "吴文英《惜秋华·七夕前一日送人归盐官》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_c7ff0b739b9f.aspx"
}, {
	"verse": "君知否，是山西将种，曾系诗盟。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_570.aspx",
	"poetry": "刘过《沁园春·张路分秋阅》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_0a2dde0748b2.aspx"
}, {
	"verse": "思归未可得，书此谢情人。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_564.aspx",
	"poetry": "李白《送郄昂谪巴中》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_11201c46f1c0.aspx"
}, {
	"verse": "忆与君别年，种桃齐蛾眉。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_492.aspx",
	"poetry": "李白《独不见》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_874910504124.aspx"
}, {
	"verse": "占得杏梁安稳处，体轻唯有主人怜，堪羡好因缘。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_490.aspx",
	"poetry": "牛峤《忆江南·衔泥燕》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_0fe47d08d681.aspx"
}, {
	"verse": "枕障薰炉隔绣帷，二年终日苦相思，杏花明月始应知。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_497.aspx",
	"poetry": "张曙《浣溪沙·枕障薰炉隔绣帷》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_541dc23e7e13.aspx"
}, {
	"verse": "应难奈，故人天际，望彻淮山，相思无雁足。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_521.aspx",
	"poetry": "史达祖《八归·秋江带雨》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_4d24a1952016.aspx"
}, {
	"verse": "绮席象床寒玉枕，美人何处醉黄花。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_404.aspx",
	"poetry": "汪元量《望江南·幽州九日》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_e125d934daaf.aspx"
}, {
	"verse": "群燕辞归鹄南翔，念君客游多断肠。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_392.aspx",
	"poetry": "曹丕《燕歌行》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_dc47feaddcd7.aspx"
}, {
	"verse": "新知遭薄俗，旧好隔良缘。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_374.aspx",
	"poetry": "李商隐《风雨》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_9fe305a09b2a.aspx"
}, {
	"verse": "肥水东流无尽期。当初不合种相思。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_366.aspx",
	"poetry": "姜夔《鹧鸪天·元夕有所梦》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_315b942a4952.aspx"
}, {
	"verse": "今日俸钱过十万，与君营奠复营斋。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_356.aspx",
	"poetry": "元稹《遣悲怀三首·其一》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_c20e02dc390a.aspx"
}, {
	"verse": "贞女贵徇夫，舍生亦如此。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_501.aspx",
	"poetry": "孟郊《列女操 / 烈女操》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_5a67990459e3.aspx"
}, {
	"verse": "君歌杨叛儿，妾劝新丰酒。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_505.aspx",
	"poetry": "李白《杨叛儿》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_f314a144aa39.aspx"
}, {
	"verse": "离恨又迎春，相思难重陈。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_506.aspx",
	"poetry": "和凝《菩萨蛮·越梅半拆轻寒里》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_835a57061468.aspx"
}, {
	"verse": "此曲有意无人传，愿随春风寄燕然，忆君迢迢隔青天。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_429.aspx",
	"poetry": "李白《长相思三首·其二》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_a8f249803e2c.aspx"
}, {
	"verse": "但怪得、当年梦缘能短。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_572.aspx",
	"poetry": "吴文英《三姝媚·过都城旧居有感》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_3fa4b168963d.aspx"
}, {
	"verse": "何事非相思，江上葳蕤竹。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_573.aspx",
	"poetry": "吴均《登二妃庙》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_4b36d23259d3.aspx"
}, {
	"verse": "念碎劈芳心，萦思千缕，赠将幽素，偷翦重云。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_547.aspx",
	"poetry": "吴文英《风流子·黄钟商芍药》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_5d428168180f.aspx"
}, {
	"verse": "天街曾醉美人畔，凉枝移插乌巾。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_550.aspx",
	"poetry": "吴文英《夜飞鹊·蔡司户席上南花》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_d86155b347bb.aspx"
}, {
	"verse": "相思不作勤书礼，别后吾言在订顽。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_541.aspx",
	"poetry": "王守仁《诸门人送至龙里道中二首》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_fac2ef5125df.aspx"
}, {
	"verse": "可能无意传双蝶，尽付芳心与蜜房。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_531.aspx",
	"poetry": "宋祁《落花》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_f98499b15326.aspx"
}, {
	"verse": "美人金梯出，素手自提筐。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_533.aspx",
	"poetry": "常建《春词二首》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_a1031ebff804.aspx"
}, {
	"verse": "屏却相思，近来知道都无益。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_513.aspx",
	"poetry": "王国维《点绛唇·屏却相思》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_d21453495f49.aspx"
}, {
	"verse": "念佳人、音尘别后，对此应解相思。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_525.aspx",
	"poetry": "晁端礼《绿头鸭·咏月》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_016004072a73.aspx"
}, {
	"verse": "美人结长想，对此心凄然。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_526.aspx",
	"poetry": "李白《折杨柳》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_3421b950818f.aspx"
}, {
	"verse": "关关雎鸠，在河之洲。窈窕淑女，君子好逑。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_5867.aspx",
	"poetry": "佚名《关雎》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_4c5705b99143.aspx"
}, {
	"verse": "情如之何，暮涂为客，忍堪送君。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_567.aspx",
	"poetry": "吴文英《沁园春·送翁宾旸游鄂渚》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_86e1dd995856.aspx"
}, {
	"verse": "在天愿作比翼鸟，在地愿为连理枝。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_5934.aspx",
	"poetry": "白居易《长恨歌》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_09d31b73b44d.aspx"
}, {
	"verse": "扪萝正意我，折桂方思君。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_577.aspx",
	"poetry": "范云《送沈记室夜别》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_092f9dad9634.aspx"
}, {
	"verse": "还始觉、留情缘眼，宽带因春。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_586.aspx",
	"poetry": "吴文英《渡江云三犯·西湖清明》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_ad2afa338c0b.aspx"
}, {
	"verse": "对菱花、与说相思，看谁瘦损。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_593.aspx",
	"poetry": "陆叡《瑞鹤仙·梅》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_dbe356a55a4f.aspx"
}, {
	"verse": "忆得盈盈拾翠侣，共携赏、凤城寒食。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_5190.aspx",
	"poetry": "李甲《帝台春·芳草碧色》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_2e47eacd35de.aspx"
}, {
	"verse": "宜有词仙，拥素云黄鹤，与君游戏。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_514.aspx",
	"poetry": "姜夔《翠楼吟·淳熙丙午冬》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_ff5f11c8e432.aspx"
}, {
	"verse": "青绫被，莫忆金闺故步。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_538.aspx",
	"poetry": "晁补之《摸鱼儿·东皋寓居》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_1ab28cd1c76f.aspx"
}, {
	"verse": "织锦相思楼影下，钿钗暗约小帘间。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_551.aspx",
	"poetry": "吴文英《新雁过妆楼·中秋后一夕李方庵月庭延客命小妓过新水令坐间赋词》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_87a5424d6da9.aspx"
}, {
	"verse": "怀春情不断，犹带相思旧子。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_552.aspx",
	"poetry": "吴文英《丁香结·夷则商秋日海棠》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_320ab1fb5cb1.aspx"
}, {
	"verse": "空劳纤手，解佩赠情人。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_555.aspx",
	"poetry": "牛希济《临江仙·柳带摇风汉水滨》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_18e92b51f295.aspx"
}, {
	"verse": "送君如昨日，檐前露已团。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_574.aspx",
	"poetry": "江淹《古离别》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_e3e85290b9b6.aspx"
}, {
	"verse": "恐断红、尚有相思字，何由见得。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_566.aspx",
	"poetry": "周邦彦《六丑·落花》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_e550c4be4735.aspx"
}, {
	"verse": "名播兰簪妃后里，晕生莲脸君王侧。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_523.aspx",
	"poetry": "张琼英《满江红·题南京夷山驿》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_4a32dd627eee.aspx"
}, {
	"verse": "愿君采葑菲，无以下体妨。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_508.aspx",
	"poetry": "李白《秦女卷衣》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_ba0f6a9606f5.aspx"
}, {
	"verse": "画船捶鼓催君去。高楼把酒留君住。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_378.aspx",
	"poetry": "舒亶《菩萨蛮·画船捶鼓催君去》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_1b55e5b36207.aspx"
}, {
	"verse": "君怀良不开，贱妾当何依。",
	"verseLink": "http://so.gushiwen.org/mingju/ju_395.aspx",
	"poetry": "曹植《明月上高楼》",
	"poetryLink": "http://so.gushiwen.org/shiwenv_5ea23fc91c66.aspx"
}]